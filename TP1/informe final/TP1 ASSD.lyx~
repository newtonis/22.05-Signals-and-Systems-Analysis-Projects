\end_inset


\end_layout

\begin_layout Standard

\lang spanish
\begin_inset Formula 
\[
\frac{T}{2}\frac{1}{C\cdot R_{1}}V_{ST}=V_{ST}\frac{R_{2}}{R_{3}}
\]

\end_inset


\end_layout

\begin_layout Standard

\lang spanish
