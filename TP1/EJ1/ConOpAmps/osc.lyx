\]

\end_inset


\end_layout

\begin_layout Standard
Agregandole un offset a la señal se obtiene que:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
V_{TR}(t)=\begin{cases}
-V_{IN}\frac{t}{CR}+V_{offset_{1}} & 0<t<\frac{T}{2}\\
V_{IN}\frac{t}{CR}+V_{offset_{1}} & \frac{T}{2}<t<T
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
V_{TR}(t)=V_{TR}(t+T)\ \forall t\epsilon\mathbb{R}
\]

\end_inset


