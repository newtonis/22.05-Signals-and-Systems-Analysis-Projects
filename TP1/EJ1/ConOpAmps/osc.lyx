\begin_layout Subsubsection
Schmitt trigger no inversor
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
V^{+}=V_{TR}(\frac{R_{3}}{R_{2}+R_{3}})+V_{ST}(\frac{R_{2}}{R_{2}+R_{3}})
